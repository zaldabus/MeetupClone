<h1>Create a Dumb Meetup Group!</h1>

<%= form_for @group do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <br>

  <%= f.label :address %>
  <br>
  <%= fields_for :address do |address_form| %>
    <%= address_form.label :address_line %>
    <%= address_form.text_field :address_line %>
    <br>

    <%= address_form.label :city %>
    <%= address_form.text_field :city %>
    <br>

    <%= address_form.label :state %>
    <%= address_form.text_field :state %>
    <br>

    <%= address_form.label :zip_code %>
    <%= address_form.text_field :zip_code %>
    <br>
    <br>
  <% end %>

  <h4>Invite users to your group!</h4>
  <input type="hidden" name="invitees[]">
  <% @invitees.each do |invitee| %>
    <% next if invitee == current_user %>
    <label for="invitee_<%= invitee.id %>"><%= invitee.email %></label>
    <input
      type="checkbox"
      name="invitees[]"
      value="<%= invitee.id %>"
      id="invitee_<%= invitee.id %>">
      <br>

  <% end %>
  <br>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <br>
  <br>

  <%= f.submit "Create" %>
<% end %>