<div class="navbar">
  <div class="navbar-inner">
    <%= link_to (image_tag "MeetUp-logo.png", class: "logo brand"), root_url %>

    <ul class="nav pull-left nav-left">
      <li><%= link_to (image_tag "find_meetup.png"), find_url, class: "find-link" %></li>
      <li><%= link_to (image_tag "start_meetup.png"), new_group_url, class: "start-link" %></li>
    </ul>

    <div class="nav-right pull-right">
      <ul class="nav pull-right nav-right">
        <% if logged_in? %>
          <li><%= current_user.name %></li>
          <li><%= link_to "My Groups", user_url(current_user) %></li>
          <li>
            <div class="dropdown">
              <a
                class="dropdown-toggle"
                data-toggle="dropdown"
                href="#">Account</a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                <li><%= link_to "General", account_url %></li>
                <li><%= link_to "Notifications", notifications_account_url %>
              </ul>
            </div>
          </li>
          <li><%= button_to "logout", session_url, method: :delete, class: "logout btn" %></li>

        <% else %>
          <li><%= link_to "Log in", new_session_url %></li>
          <li><%= link_to "Sign up", new_user_url %></li>
        <% end %>

        <form action="<%= find_url %>" method="GET">
          <input
            class="span3"
            type="text"
            name="query"
            value="<%= params[:query] %>"
            placeholder="Search">
        </form>

      </ul>
    </div>

  </div>
</div>