<div class="navbar">
  <div class="navbar-inner">
    <%= link_to (image_tag "MeetUp-logo.png", class: "logo brand"), root_url %>

    <ul class="nav pull-left nav-left">
      <li><%= link_to "Find Meetup", find_url %></li>
      <li><%= link_to "Start Meetup", new_group_url %></li>
    </ul>

    <div class="nav-right pull-right">
      <ul class="nav pull-right nav-right">
        <% if logged_in? %>
          <li><%= current_user.name %></li>
          <li><%= link_to "My Groups", user_url(current_user) %></li>
          <li><%= link_to "Account", account_url %></li>
          <li><%= button_to "logout", session_url, method: :delete, class: "logout btn" %></li>

        <% else %>
          <li><%= link_to "Log in", new_session_url %></li>
          <li><%= link_to "Sign up", new_user_url %></li>
        <% end %>

        <form action="<%= find_url %>" method="GET">
          <input
            class="span3"
            type="text"
            name="query"
            value="<%= params[:query] %>"
            placeholder="Search">
        </form>

      </ul>
    </div>

  </div>
</div>