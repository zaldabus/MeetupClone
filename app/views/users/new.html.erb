<h1>Welcome to Dumb Meetup!</h1>

<%= form_for @user do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name %>
  <br>

  <label for="user_email">Email</label>
  <%= f.text_field :email %>
  <br>
  <br>

  <label for="user_address">Address</label>
  <br>
  <%= fields_for :address do |address_form| %>
    <label for="address_address_line">Address Line</label>
    <%= address_form.text_field :address_line %>
    <br>

    <label for="address_city">City</label>
    <%= address_form.text_field :city %>
    <br>

    <label for="address_state">State</label>
    <%= address_form.text_field :state %>
    <br>

    <label for="address_zip_code">Zip Code</label>
    <%= address_form.text_field :zip_code %>
    <br>
    <br>
  <% end %>

  <label for="user_password">Password</label>
  <%= f.password_field :password %>
  <br>
  <br>


  <%= f.submit "Create" %>
<% end %>