<h1>Create a Dumb Meetup Event!</h1>

<!-- Seems to be causing an error when I perform the create action with "events path" -->
<%= form_for [@group, @event], url: group_events_url(@group) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>

  <%= f.label :date %>
  <input type="date" name="event[date]">
  <br>

  <%= f.label :time %>
  <input type="time" name="event[time]">
  <br>
  <br>

  <%= f.label :address %>
  <br>
  <%= fields_for :address do |address_form| %>
    <%= address_form.label :address_line %>
    <%= address_form.text_field :address_line %>
    <br>

    <%= address_form.label :city %>
    <%= address_form.text_field :city %>
    <br>

    <%= address_form.label :state %>
    <%= address_form.text_field :state %>
    <br>

    <%= address_form.label :zip_code %>
    <%= address_form.text_field :zip_code %>
    <br>
    <br>
  <% end %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <br>
  <br>

  <%= f.submit "Create" %>
<% end %>