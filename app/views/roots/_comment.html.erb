<article class="post">
  <div class="post-thumbnail">
    <%= link_to image_tag(comment.user.avatar.url, size: "50x50"),
        user_url(comment.user)%>
  </div>

  <div class="post-info">
    <h5><%= link_to comment.user.name, user_url(comment.user) %></h5>
    <p><%= comment.body %></p>
    <time><%= comment.created_at.strftime("%b, %d %I:%m %p") %></time>
  </div>
</article>